<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="struts2" extends="struts-default">
	
		<action name="index">
			<result>/initSession.jsp</result>
		</action>


		<action name="*MUser" class="struct.actions.MUserAction" method="{1}">
			<result name="input">/initSession.jsp</result>
			<result name="portal">/portal.jsp</result>
			<result name="editInfo">/editInfoPersonal.jsp</result>
	    	<result name="editLoginPass">/editLoginPass.jsp</result>
	    	<result name="success_update">/successUpdate.jsp</result>
	    	<result name="displayWishList">/wishlist.jsp</result>
	    	<result name="displayShoppingCart">/shoppingCart.jsp</result>
	    	<result name="displayBuyHistory">/buyHistory.jsp</result>
		</action>
		
		<action name="*MAdmin" class="struct.actions.MAdminAction" method="{1}">
			<result name="displayUsersList">/usersList.jsp</result>
			<result name="displayProductsList">/productsList.jsp</result>
			<result name="displayConsolesList">/consolesList.jsp</result>
		</action>

	</package>
	
</struts>